                    android:ems="10" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRowF7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F7"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/editF7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_bkgrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transparent"
        android:layout_alignParentBottom="true"
        android:onClick="btnClick"
        android:text="Set Background"
        android:textSize="14sp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_bkgrd"
        android:layout_alignBottom="@+id/btn_bkgrd"
        android:layout_toRightOf="@+id/transparent"
        android:onClick="btnClick"
        android:text="@string/save"
        android:textSize="14sp" />

    <Button
        android:id="@+id/codes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save"
        android:layout_alignBottom="@+id/save"
        android:layout_toRightOf="@+id/save"
        android:onClick="btnClick"
        android:text="Key Codes"
        android:textSize="14sp" />

</RelativeLayout>